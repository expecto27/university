extends ../head
block content
    div(class="col-md-5")
        form(action="/updateStudent/" + student.id, method="POST")
            div(class="form-group mb-3")
                input(name="name" type="text" placeholder="ФИО" value=student.name required class="form-control")
            div(class="form-group mb-3")
                select(name="student_group_id" required class="form-select")
                    each el in studentGroups
                        if(student.student_group_id == el.id)
                            option(value=el.id selected) #{el.name}
                        else
                            option(value=el.id) #{el.name}
            div(class="form-group mb-3")
                input(type="submit" value="Обновить" class="btn btn-success")
        form(action="/deleteStudent/" + student.id, method="POST")
            div(class="form-group mb-3")
                input(type="submit" value="Удалить" class="btn btn-warning")